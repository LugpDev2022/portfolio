---
import { FaGithub, FaLinkedin } from 'react-icons/fa';
import { FaFileArrowDown } from 'react-icons/fa6';

import ContactItem from './ContactItem.astro';
import { getLangFromUrl } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const cv = lang === 'es' ? '/files/cv-es.pdf' : '/files/cv-en.pdf';
---

<ul class='flex items-center gap-7 mt-10 mb-14'>
  <ContactItem href='https://mx.linkedin.com/in/luiscerv'>
    <FaLinkedin size={30} aria-label='linkedin' />
  </ContactItem>

  <ContactItem href='https://github.com/LugpDev2022'>
    <FaGithub size={30} aria-label='github' />
  </ContactItem>

  <ContactItem href={cv}>
    <FaFileArrowDown size={30} aria-label='curriculum vitae' />
  </ContactItem>
</ul>
