---
import { Trans } from 'astro-i18next/components';

import Subtitle from '../components/Subtitle.astro';
import Project from '../components/project/Project.astro';
import Arrow from '../svgs/Arrow.astro';

import { projects } from '../projects';
---

<section class='mt-[75px]' id='projects'>
  <Subtitle>
    <Trans i18nKey='intro.navigation.projects'>Projects</Trans>
  </Subtitle>

  <!-- TODO: Translate projects description -->
  <div class='flex flex-col gap-5 mt-5 max-w-[100%] overflow-hidden'>
    {
      projects.map((project, i) => (
        <Project {...project} lazy={i >= 2} index={i} />
      ))
    }
  </div>

  <a
    href='https://github.com/LugpDev2022?tab=repositories'
    class='projects-link mt-[10px]'
    target='_blank'
    rel='noreferrer'
    ><Trans i18nKey='projects.link'>See more projects</Trans> <Arrow /></a
  >
</section>
